---
layout: layout.njk
---
<div class="post-title-container">
  <h1 class="post-title">{{ title }}</h1>
  <p class="post-date">{{ date.toLocaleDateString() }}</p>
</div>
<article>
  {{ content | safe }}
</article>
<form action="https://buttondown.email/api/emails/embed-subscribe/arun" method="post" target="popupwindow"
  onsubmit="window.open('https://buttondown.email/arun', 'popupwindow')" class="newsletter-form">
  <div>
    <label for="bd-email">To know what I'm up to :)</label>
  </div>
  <input type="email" name="email" id="bd-email" placeholder="Enter your email">
  <input type="hidden" value="1" name="embed"></input>
  <input type="submit" value="Subscribe"></input>
</form>